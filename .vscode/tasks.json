{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Docker Image: user-service",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "up",
        "--build",
        "-d",
        "user-service"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Stop",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "down"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
