{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Remote FastAPI",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "0.0.0.0",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/user-service"
        }
      ]
    },
    {
      "name": "FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.entrypoints.app:app",
        "--reload",
        "--port",
        "32000",
        "--host",
        "0.0.0.0"
      ]
    },
    {
      "name": "Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/tests"
      ]
    }
  ]
}
